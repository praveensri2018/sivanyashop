{
  "info": {
    "name": "SivanyaShop Admin Product Workflow",
    "_postman_id": "d1c0f6fa-1234-5678-9101-abcdef123456",
    "description": "Test admin product workflow on localhost:3000, including product images",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"adminpassword\"\n}" },
        "url": { "raw": "http://localhost:3000/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","auth","login"] }
      },
      "response": []
    },
    {
      "name": "Create Category",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n    \"name\": \"Electronics\",\n    \"parentCategoryId\": null\n}" },
        "url": { "raw": "http://localhost:3000/api/products/category", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","products","category"] }
      },
      "response": []
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n    \"name\": \"Smartphone XYZ\",\n    \"description\": \"Latest smartphone with awesome features\",\n    \"imagePath\": \"http://localhost:3000/images/smartphone.png\",\n    \"categoryIds\": [1]\n}" },
        "url": { "raw": "http://localhost:3000/api/products/product", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","products","product"] }
      },
      "response": []
    },
    {
      "name": "Add Variant",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n    \"productId\": 1,\n    \"sku\": \"XYZ-BLK-128\",\n    \"variantName\": \"Black 128GB\",\n    \"attributes\": \"Color:Black;Storage:128GB\",\n    \"stockQty\": 50\n}" },
        "url": { "raw": "http://localhost:3000/api/products/variant", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","products","variant"] }
      },
      "response": []
    },
    {
      "name": "Set Variant Price",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n    \"variantId\": 1,\n    \"priceType\": \"CUSTOMER\",\n    \"price\": 500\n}" },
        "url": { "raw": "http://localhost:3000/api/products/variant/price", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","products","variant","price"] }
      },
      "response": []
    },
    {
      "name": "Update Variant Price",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{\n    \"variantId\": 1,\n    \"priceType\": \"CUSTOMER\",\n    \"price\": 550\n}" },
        "url": { "raw": "http://localhost:3000/api/products/variant/price", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","products","variant","price"] }
      },
      "response": []
    },
    {
      "name": "Upload Product Images",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "productId", "value": "1", "type": "text" },
            { "key": "images", "type": "file", "src": "/path/to/image1.png" },
            { "key": "images", "type": "file", "src": "/path/to/image2.png" }
          ]
        },
        "url": { "raw": "http://localhost:3000/api/product-images/upload", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","product-images","upload"] }
      },
      "response": []
    }
    , {
      "name": "Fetch Products Paginated",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/products?page=1&limit=10",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api","products"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "10" }
          ]
        }
      }
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Updated Product Name\",\n    \"description\": \"Updated description\",\n    \"imagePath\": \"http://localhost:3000/images/new-image.png\",\n    \"categoryIds\": [1,2]\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/products/product/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api","products","product","1"]
        }
      }
    },
    {
      "name": "Delete Product Categories",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/products/1/categories",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api","products","1","categories"]
        }
      }
    },
    {
      "name": "Fetch All Categories",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/products/categories",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api","products","categories"]
        }
      }
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/products/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api","products","1"]
        }
      }
    },{
  "name": "Delete Product Image",
  "request": {
    "method": "DELETE",
    "header": [
      { "key": "Authorization", "value": "Bearer {{adminToken}}" }
    ],
    "url": {
      "raw": "http://localhost:3000/api/product-images/1",
      "protocol": "http",
      "host": ["localhost"],
      "port": "3000",
      "path": ["api", "product-images", "1"]
    }
  }
}

  ],
  "variable": [
    { "key": "adminToken", "value": "" }
  ]
}
